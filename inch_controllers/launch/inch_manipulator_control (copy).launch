<launch>

  <!-- inch_manipulator_control -->
  <arg name="robot_name"			default="/inch"/>
  
  <arg name="length_1"				default="0.24215"/>
  <arg name="length_2"				default="0.1759"/>
  <arg name="length_3"				default="0."/>



  <!-- Optitrack -->
  <arg name="optitrack_IP"			default="192.168.10.9"/>
  <arg name="ROSCORE_IP"			default="192.168.10.8"/>
  <arg name="multicast_IP"			default="239.255.42.99"/>


  <!-- dynamixel Inch -->
  <arg name="device_name_InchU2D2"		default="/dev/ttyINCH"/>
  <arg name="baud_rate_inch"			default="1000000"/>




  <include file="$(find dynamixel_workbench_controllers)/launch/position_control.launch">
  	<param name="device_name"		value="$(arg device_name_InchU2D2)"/>
  	<param name="baud_rate"		value="$(arg baud_rate_inch)"/>
  </include>


  <include file="$(find optitrack)/launch/optitrack.launch">
  	<param name="server"			value="$(arg optitrack_IP)"/>
  	<param name="local"			value="$(arg ROSCORE_IP)"/>
  	<param name="multicast_group"		value="$(arg multicast_IP)"/>
  </include>


  <node name="inch_manipulator_control" pkg="inch_controllers" type="inch_manipulator_control" required="true" output="screen"> 
  </node>

</launch>
